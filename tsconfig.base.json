{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@monorepo-trpc-scaffold/shared/*": ["packages/shared/src/*"],
      "@monorepo-trpc-scaffold/api/*": ["apps/api/src/*"]
    }
  }
}
